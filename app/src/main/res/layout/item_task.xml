<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/textViewTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_detail_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/textViewTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_description_label"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/textViewAssignedTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/assigned_to_placeholder"
        android:textSize="14sp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/textViewTaskDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_due_date_placeholder"
        android:textSize="14sp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/textViewTaskStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_status_placeholder"
        android:textSize="14sp"
        android:textColor="@color/error_color"/>
</LinearLayout>