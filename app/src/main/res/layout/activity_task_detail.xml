<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/textViewTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_detail_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewTaskDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_description_label"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/textViewTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_description_placeholder"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/textViewTaskDueDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_due_date_label"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/textViewTaskDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_due_date_placeholder"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/textViewTaskStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_status_label"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/textViewTaskStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_status_placeholder"
        android:textColor="@color/error_color"
        android:layout_marginBottom="16dp"/>

</LinearLayout>